<% if flash.has?(:message) %>
  <%= flash.now[:message] %>
<% end %>
<p>Successfully created song.</p>
<p>Successfully updated song.</p>
<h1><%= @song.name %></h1>
<h3><a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a></h3>
<% @song.genres.each do |genre| %>
    <h5><a href="/genres/<%= genre.slug %>"><%= genre.name %></a></h5>
<% end %>