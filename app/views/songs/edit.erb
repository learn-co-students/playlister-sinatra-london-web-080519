<h1>Edit Song</h1> <br>

<form action="/songs/<%= @song.slug %>" method="post">
<input type="hidden" id="hidden" name="_method" value="patch">
<p>Name: <input type="text" id="Name" name="song[name]" value="<%= @song.name %>"></p>

<h4>Choose Existing Artist:</h4>
<select name="song[artist_id]">
<% @artists.each do |artist| %>
<option value="<%= artist.id%>" <%= 'selected' if @song.artist == artist %>><%= artist.name %></option>
<% end  %>
</select>

<h4>Create New Artist</h4>
<p>Name: <input type="text" id="Artist Name" name="artist[name]"></p>

<%# <h4>Create New Genre</h4>
<p>Name: <input type="text" id="new_genre" name="song[genre][name]"></p> %>

<h4>Choose Existing Genre:</h4>

<% @genres.each do |genre| %>
<input type='checkbox' name="song[genre_ids][]" value="<%= genre.id%>" id="<%= genre.name %>" <%= 'checked' if @song.genres.include?(genre) %>><%= genre.name %>
<% end  %>
<br>
<button type="submit" id="Save" name="Save">Save</button>

</form>